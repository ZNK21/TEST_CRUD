@{
    ViewData["Title"] = "Juegos";
}

@model IEnumerable<TEST_CRUD.Entities.Games>
@*Se llama a la entidad "Games"*@

<link href="~/bundles/games.min.css" rel="stylesheet" />
<div>
    <div class="titulo">
        <span class="mantenedor">Mantenedor de Videojuegos</span><th class="th" scope="col">
        <button id="crear" type="button" class="btn btn-success crear" data-target="#newModal">➕ Crear registro</button></th>
    </div>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th style="width: 50px" scope="col">#ID</th>
                <th class="th" scope="col">Nombre del juego</th>
                <th class="th" scope="col">Fecha de lanzamiento</th>
                <th class="th" scope="col">Género</th>
                <th class="th" scope="col">Precio</th>
                <th class="th" scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            //Se indica que por cada variable item en Model se crearan los siguientes campos
            {
                <tr>
                    <td> @item.gameId </td>
                    <td> @item.gameName </td>
                    <!--<td> @string.Format("{0:dd'/'MM'/'yyyy}", item.launchDate)</td>--> @*Aca se formatea la fecha*@
                    <td id="fecha_@item.gameId" data-valor="@item.launchDate"></td>
                    <td> @item.genre </td>
                    <!--<td> @string.Format("{0:$#,0}", item.price) </td>--> @*Aca se formatea el precio*@
                    <td id="moneda_@item.gameId" data-valor=@item.price></td>
                    <td>
                        <button id="editar_@item.gameId" type="button" class="btn btn-warning editar e_d" data-target="#newModal">Editar</button>
                        <button id="eliminar_@item.gameId" type="button" class="btn btn-danger eliminar e_d" data-target="#newModal">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

    </table>



<script src="~/js/site.js" type="text/javascript"></script>